{
    "name": "codemath",
    "displayName": "CodeMath",
    "description": "Save time and effort calculating math problems in your development environment.",
    "version": "1.0.1",
    "icon": "./assets/logo.png",
    "galleryBanner": {
        "color": "#0A3649",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.79.0"
    },
    "categories": [
        "Other"
    ],
    "publisher": "otnansirk",
    "author": {
        "name": "otnansirk"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "pnpm compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "pnpm compile && pnpm lint",
        "lint": "eslint src --ext ts",
        "test": "mocha",
        "cov": "nyc pnpm test && istanbul-badges-readme"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^24.9.2",
        "@types/vscode": "^1.79.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "istanbul-badges-readme": "^1.8.5",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "mathjs": "^11.8.2"
    },
    "keywords": [
        "codemath",
        "math",
        "calculations",
        "development",
        "efficiency",
        "tool",
        "utility"
    ],
    "contributes": {
        "changelog": "./CHANGELOG.md",
        "keybindings": [
            {
                "command": "codemath.applyResult",
                "key": "tab",
                "when": "editorTextFocus && codemath.previewActive"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/otnansirk/vscode-codemath-extension.git"
    },
    "bugs": {
        "url": "https://github.com/otnansirk/vscode-codemath-extension/issues"
    }
}